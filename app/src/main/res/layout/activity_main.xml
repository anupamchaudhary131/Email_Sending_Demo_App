<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/learnvern"
        android:textSize="@dimen/textsize"
        android:textStyle="bold"
        android:textColor="@color/saffron"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/emailToUser"
        android:textSize="@dimen/commonsize"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="@dimen/commonsize" />

    <Button
        android:id="@+id/btnComposeEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/composeEmail"
        android:textSize="@dimen/buttonSize"
        android:textStyle="bold"
        android:typeface="serif"
        android:backgroundTint="@color/saffron"
        android:layout_margin="@dimen/commonsize" />



</LinearLayout>